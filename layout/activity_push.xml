<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".push">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00000000"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/back" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY 등록"
                android:textSize="28sp"
                android:layout_marginRight="145dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/toolbar"
        app:srcCompat="@drawable/kind" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:layout_above="@id/bottom_navigation"
        android:background="#F4F8FB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 기존 컨텐츠 -->
            <ImageView
                android:layout_width="101dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/mypush" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/mouse" />

                <ImageView
                    android:layout_marginLeft="-20dp"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/mousesul" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="left"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/myoffer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ebook" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="물견명: 이북리더기\n상태: 생활기스 약간 있음"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="수락" />

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="거절" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/tablet" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="물견명: 갤럭시 탭\n상태: S펜 미보유"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="수락" />

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="거절" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/blusp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="물견명: 브리츠 스피커\n상태: 이상없음"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="수락" />

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/littlenavy"
                        android:text="거절" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/headset" />

                <ImageView
                    android:layout_marginLeft="-100dp"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/headsetsul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F4F8FB">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/camera" />

                <ImageView
                    android:layout_marginLeft="-20dp"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/camerasul" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_popup"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/scroll_view"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_marginBottom="-63dp"
        android:backgroundTint="@color/skyblue"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/skyblue"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_bar" />

</RelativeLayout>
