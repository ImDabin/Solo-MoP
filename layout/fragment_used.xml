<?xml version="1.0" encoding="utf-8"?>


<!-- fragment_used.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/famous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기 카테고리 Top3" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_marginLeft="120dp"
            android:background="#00ff0000"
            android:text="더보기"
            android:textColor="#000000" />


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#989692"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/digital_button"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/skyblue"
            android:text="디지털"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/health_button"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"

            android:backgroundTint="@color/skyblue"
            android:text="헬스/요가"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/shoes_button"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:backgroundTint="@color/skyblue"
            android:text="신발"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/littleskyblue"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/camcoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"

                android:text="인기상품 top 3"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5D6D6"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageButton
                android:id="@+id/shoping_button1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:contentDescription="camera Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/camera1" />


            <ImageButton
                android:id="@+id/shoping_button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="health Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/health" />

            <ImageButton
                android:id="@+id/shoping_button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="headset Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/headset1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/camcoder_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="방송용 캠코더"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/helth_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="55dp"
                android:text="헬스 아령"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/headset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="헤드셋"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9A9A9A" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/littleskyblue"
        android:orientation="vertical"
        android:padding="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/regi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"

                android:text="최근 등록된 상품"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5D6D6"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageButton
                android:id="@+id/regi_button1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:contentDescription="camera Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/airpot" />


            <ImageButton
                android:id="@+id/regi_button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="health Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/backpack" />

            <ImageButton
                android:id="@+id/regi_button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="headset Button"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sneakers" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/airpot_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="     에어팟 프로"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/backpack_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="17dp"
                android:text="아더에러 백팩"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/sneakers_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뉴발란스 운동화"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>